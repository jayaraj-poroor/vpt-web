<script>

    support_init((getUser() != undefined ? getUser().email : ""));
    function bb_alert(title, msg, callback) {
        bootbox.dialog({
            message: msg,
            title: title,
            buttons: {
                success: {
                    label: "OK",
                    className: "btn-success",
                    callback: function () {
                        if (callback != undefined) {
                            callback();
                        }
                    }
                }
            }
        });
    }
    function validateEmail(email) {
        var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        return re.test(email);
    }
    function submitUserInfo(event) {
        event.preventDefault();
        var name = $('#username').val();
        var email = $('#email').val();
        var interestedDbs = $("#mySqlInterested").is(":checked");
        var otherDbs = $('#otherDbs').val();


        var subscribeToMailChimp = $('#subscribeToMailChimp').prop('checked');
        if (name == "" && email == "" && (otherDbs == "" && isInterested == true )) {
            bootbox.alert("Please enter valid data and try signing up again.");
            return;
        }
        if (validateEmail(email)) {
            var data = {name: name, email: email, databases: otherDbs, mysql_selected: interestedDbs};
            addWaitingOverlay();
            doPost("/expressDbaInterest", data, function (resp) {
                removeWaitingOverlay();
                if (resp.status == 200) {
                    bb_alert("Success", "Thank you for signing up. We have registered you for the beta. We will Email you when it is ready.", function () {
                        $("#username").val("");
                        $("#email").val("");
                        $("#invitationCode").val("");
                    });
                }
                else {
                    bb_alert("Error", "An error has been occurred. Please try again. " + ((typeof resp.msg == "string") ? "(" + resp.msg + ")" : "" ));
                    console.log(resp);
                }
            }, function (err) {
                removeWaitingOverlay();
                bootbox.alert("Server Error: " + err.error);
            });
        }
        else {
            bb_alert("Error", "Invalid Email address: " + email);
        }
        event.preventDefault();
    }

    $(function () {
        $(".sticky-close").click();
        $("#interest").click(submitUserInfo);
        $('#benefitslink').click(function () {
            $('#benefits').modal('show');
        });
        $("#interest").tooltip();
    });

</script>
